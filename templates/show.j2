<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ entry.title[0].title }} | {{ config.site_name }}</title>
    <style>
      {% include "templates/style.css" %}
    </style>
  </head>
  <body>
    <div class="container">

      <p><a href="index.html">{{ config.site_name }}</a></p>

      <h1>{{ entry.title[0].title }}</h1>

      <p>
        {{ config.base_url }}/{{ entry.id }}.html
      </p>

      <dl class="row">
        <dt class="col-sm-2">ファイル</dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for file in entry.file %}
              <dt class="col-sm-2">ファイル形式</dt>
              <dd class="col-sm-10">{{ file.mime_type }}</dd>
              <dt class="col-sm-2">URI</dt>
              <dd class="col-sm-10">
                <a href="{{ file.uri }}">{{ file.uri }}</a>
              </dd>
              {% for date in file.date %}
                <dt class="col-sm-2">{{ date.date_type }}</dt>
                <dd class="col-sm-10">{{ date.date }}</dd>
              {% endfor %}
            {% endfor %}
            {% for file in files %}
              <dt class="col-sm-2">URI</dt>
              <dd class="col-sm-10">
                <a href="{{ entry.id }}/{{ file }}">{{ file }}</a>
              </dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">資源タイプ</dt>
        <dd class="col-sm-10">{{ entry.type }}</dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">出版タイプ</dt>
        <dd class="col-sm-10">{{ entry.text_version }}</dd>
      </dl>

      <dl class="row">
        {% for creator in entry.creator %}
          <dt class="col-sm-2"><a href="https://schema.irdb.nii.ac.jp/ja/schema/2.0/3">作成者</a></dt>
          <dd class="col-sm-10">
            {% for creator_name in creator.creator_name %}
              <dl class="row">
                <dt class="col-sm-2">{{ creator_name.lang }}</dt>
                <dd class="col-sm-10">{{ creator_name.name }}</dd>
              </dl>
            {% endfor %}
            {% for name_identifier in creator.name_identifier %}
              <dl class="row">
                {% if name_identifier.identifier_scheme == "ORCID" %}
                  <dt class="col-sm-2">ORCID</dt>
                  <dd class="col-sm-10"><a href="{{ name_identifier.identifier }}">{{ name_identifier.identifier }}</a></dd>
                {% else %}
                <dt class="col-sm-2">{{ name_identifier.identifier_scheme }}</dt>
                <dd class="col-sm-10">{{ name_identifier.identifier }}</dd>
                {% endif %}
              </dl>
            {% endfor %}
          </dd>
        {% endfor %}
      </dl>

      <dl class="row">
        {% for contributor in entry.contributor %}
          <dt class="col-sm-2">寄与者</dt>
          <dd class="col-sm-10">
            {% for contributor_name in contributor.contributor_name %}
              {{ contributor_name.name }}
            {% endfor %}
            {% for name_identifier in contributor.name_identifier %}
              {% if name_identifier.identifier_scheme == "ORCID" %}
                <a href="{{ name_identifier.identifier }}">{{ name_identifier.identifier }}</a>
              {% else %}
                {{ name_identifier.identifier }}
              {% endif %}
            {% endfor %}
          </dd>
        {% endfor %}
      </dl>

      <dl class="row">
        <dt class="col-sm-2">主題</dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for subject in entry.subject %}
              <dt class="col-sm-2">{{ subject.subject_scheme }}</dt>
              <dd class="col-sm-10">{{ subject.subject }}</dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">内容記述</dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for description in entry.description %}
              <dt class="col-sm-2">{{ description.description_type }}</dt>
              <dd class="col-sm-10">{{ description.description }}</dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">出版者</dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for publisher in entry.publisher %}
              <dt class="col-sm-2">{{ publisher.lang }}</dt>
              <dd class="col-sm-10">{{ publisher.publisher }}</dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">日付</dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for date in entry.date %}
              <dt class="col-sm-2">{{ date.date_type }}</dt>
              <dd class="col-sm-10">{{ date.date }}</dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      <dl class="row">
        <dt class="col-sm-2">言語</dt>
        {% for language in entry.language %}
          <dd class="col-sm-10">{{ language }}</dd>
        {% endfor %}
      </dl>

      <dl class="row">
        <dt class="col-sm-2">識別子</dt>
        <dd class="col-sm-10">
          <ul>
            {% for identifier in entry.identifier %}
              <li><a href="{{ identifier }}">{{ identifier }}</a></li>
            {% endfor %}
          </ul>
        </dd>
      </dl>

      {% if entry.identifier_registration %}
        <dl class="row">
          <dt class="col-sm-2">ID登録</dt>
          <dd class="col-sm-10"><a href="https://doi.org/{{ entry.identifier_registration.identifier }}">https://doi.org/{{ entry.identifier_registration.identifier }}</a></dd>
        </dl>
      {% endif %}

      <dl class="row">
        <dt class="col-sm-2">関連情報</dt>
        {% for relation in entry.relation %}
          <dd class="col-sm-10">{{ relation.relation_type }}: <a href="{{ relation.related_identifier.identifier }}">{{ relation.related_identifier.identifier }}</a></dd>
        {% endfor %}
      </dl>

      <dl class="row">
        <dt class="col-sm-2"><a href="https://schema.irdb.nii.ac.jp/ja/schema/2.0/23">助成情報</a></dt>
        {% for funding_reference in entry.funding_reference %}
          <dd class="col-sm-10">
            {% if funding_reference.award_number.award_number_type == "JGN" %}
              <a href="{{ funding_reference.award_number.award_uri }}">{{ funding_reference.award_title[0].award_title }}</a>
            {% else %}
              {{ funding_reference.award_title[0].award_title }}
            {% endif %}
          </dd>
        {% endfor %}
      </dl>

      <dl class="row">
        <dt class="col-sm-2"><a href="https://schema.irdb.nii.ac.jp/ja/schema/2.0/25">収録物名</a></dt>
        <dd class="col-sm-10">
          <dl class="row">
            {% for source_title in entry.source_title %}
              <dt class="col-sm-2">
                {{ source_title.lang }}
              </dt>
              <dd class="col-sm-10">
                {{ source_title.source_title }}.
                vol. {{ entry.volume }},
                issue {{ entry.issue }}.
                {{ entry.page_start }}-{{ entry.page_end }}.
              </dd>
            {% endfor %}
          </dl>
        </dd>
      </dl>

      {% if entry.dissertation_number %}
        <dl class="row">
          <dt class="col-sm-2">学位授与番号</dt>
          <dd class="col-sm-10">{{ entry.dissertation_number }}</dd>
          {% for degree_name in entry.degree_name %}
            <dt class="col-sm-2">学位名</dt>
            <dd class="col-sm-10">{{ degree_name.lang }}: {{ degree_name.degree_name }}</dd>
          {% endfor %}
          <dt class="col-sm-2">学位授与年月日</dt>
          <dd class="col-sm-10">{{ entry.date_granted }}</dd>
          <dt class="col-sm-2">学位授与機関</dt>
          {% for degree_grantor in entry.degree_grantor %}
            {% for degree_grantor_name in degree_grantor.degree_grantor_name %}
              <dd class="col-sm-10">{{ degree_grantor_name.lang }}: {{ degree_grantor_name.degree_grantor_name }}</dd>
            {% endfor %}
          {% endfor %}
        </dl>
      {% endif %}

      <div>
        最終更新日: {{ now }}
        <a href="{{ entry.id }}/jpcoar20.xml">JPCOAR Schema 2.0 XML</a>
      </div>

      {% include "templates/footer.j2" %}
    </div>
  </body>
</html>
